set scrolloff=5
set number
set relativenumber
set incsearch

map Q gq
Plug 'machakann/vim-highlightedyank'
Plug 'tpope/vim-commentary'

let mapleader = ","

map <leader>o <Action>(GotoFile)
map <leader>b <Action>(RecentFilesSelectOpenedFile)
map <leader>p <Action>(NextTab)
map <leader>n <Action>(PreviousTab)
map <leader>w <Action>(SaveAll)
map <leader>q <Action>(CloseContent)
map <leader>u <Action>(RecentFiles)
map <leader>= <Action>(ReformatCode)
map <leader>R <Action>(RenameElement)
map <leader>f <Action>(FindUsages)
map <leader>e <Action>(ActivateProjectToolWindow)
map <leader>d <Action>(GotoDeclaration)
map <leader>a <Action>(SearchEverywhere)
map <leader>s <Action>(FileStructurePopup)

map <leader>j <C-d>
map <leader>k <C-u>

map <leader>h <C-w>h
map <leader>l <C-w>l

map <leader>sv <Action>(SplitVertically)

map <leader>b <Action>(ToggleLineBreakpoint)
map <leader>D <Action>(Debug)
map <leader>r <Action>(Run)

inoremap jj <Esc>
